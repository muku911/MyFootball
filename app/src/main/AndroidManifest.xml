<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.myfootball">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_football"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Themesplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.LeagueActivity"
            android:label="League List"
            android:theme="@style/ThemeMain" />
        <activity
            android:name=".main.LeagueScheduleActivity"
            android:label="@string/title_activity_league_schedule"
            android:parentActivityName=".main.LeagueActivity"
            android:theme="@style/Themesplash" />
        <activity
            android:name=".main.DetailMatchActivity"
            android:label="Match Detail"
            android:theme="@style/ThemeMain" />
        <activity
            android:name=".main.HomeActivity"
            android:label="My Football Menu"
            android:theme="@style/ThemeMain" />
        <activity
            android:name=".main.FavoriteActivity"
            android:label="Favorite"
            android:theme="@style/Themesplash" />
        <activity
            android:name=".main.TeamActivity"
            android:label="Team List"
            android:theme="@style/ThemeMain" />
        <activity
            android:name=".main.DetailTeamActivity"
            android:label="Team Detail"
            android:parentActivityName=".main.TeamActivity"
            android:theme="@style/Themesplash" />
        <activity android:name=".main.DetailPlayerActivity"
            android:label="Detail Player"
            android:theme="@style/ThemeMain"/>
    </application>

</manifest>